
<%- include("../partials/header", {metaTitle: "Login", authPath:'/sign-up'})  %>
    <div class="container">
      <div class="card" role="main">
        <div class="panel">
          <h1 id="panel-heading">Welcome back</h1>
          <p class="lead" id="panel-sub">
            Sign in to create or view your Todos
          </p>
          <% if (message) { %>
            <p class="notification <%= hasError ? 'error' : 'success' %>"><%= message %></p>
          <% } %>
          <form action="/login" method="post">
            <input type="email" name="email" placeholder="Email" required />
            <input
              type="password"
              name="password"
              placeholder="Password"
              required
            />
            <button type="submit">Login</button>
          </form>

          <footer>
            <div>
              <p>Don't have an account? <a href="/sign-up">Sign up</a></p>
            </div>
          </footer>
        </div>
      </div>
    </div>
  </body>
</html>

